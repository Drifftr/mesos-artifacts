{
  "id": "wso2esb-worker",
  "cpus": 0.5,
  "mem": 2048,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "wso2esb-worker-mesos:4.9.0",
      "network": "BRIDGE",
      "portMappings": [
        {
          "name": "hazelcast",
          "containerPort": 0,
          "hostPort": 0,
          "servicePort": 10097,
          "protocol": "tcp"
        },
        {
          "name": "pass-through-http",
          "containerPort": 8280,
          "servicePort": 10092,
          "protocol": "tcp"
        },
        {
          "name": "pass-through-https",
          "containerPort": 8243,
          "servicePort": 10093,
          "protocol": "tcp"
        }
      ]
    }
  },
  "env": {
    "KEY_STORE_PASSWORD": "wso2carbon"
  },
  "labels": {
    "HAPROXY_1_GROUP": "marathon-lb",
    "HAPROXY_2_GROUP": "marathon-lb",
    "HAPROXY_2_BACKEND_SERVER_OPTIONS": "  server {serverName} {host_ipv4}:{port}{cookieOptions} ssl verify none \n",
    "HAPROXY_2_BACKEND_STICKY_OPTIONS": "  cookie JSESSIONID prefix nocache \n",
    "HAPROXY_2_STICKY": "true",
    "HAPROXY_2_SSL_CERT": "/etc/ssl/wso2demo.pem",
    "HAPROXY_2_MODE": "http"
  },
  "healthChecks": [
    {
      "portIndex": 1
    }
  ]
}
