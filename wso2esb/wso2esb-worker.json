{
  "id": "wso2esb-worker",
  "cpus": 0.5,
  "mem": 2048,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "wso2esb-worker-mesos:4.9.0",
      "network": "BRIDGE",
      "portMappings": [
        {
          "name": "hazelcast",
          "containerPort": 0,
          "hostPort": 0,
          "servicePort": 10096,
          "protocol": "tcp"
        },
        {
          "name": "pass-through-http",
          "containerPort": 8280,
          "servicePort": 10092,
          "protocol": "tcp"
        },
        {
          "name": "pass-through-https",
          "containerPort": 8243,
          "servicePort": 10093,
          "protocol": "tcp"
        }
      ]
    }
  },
  "healthChecks": [
    {
      "portIndex": 1
    }
  ],
  "env": {
    "KEY_STORE_PASSWORD": "wso2carbon"
  },
  "labels": {
    "HAPROXY_1_GROUP": "marathon-lb",
    "HAPROXY_2_GROUP": "marathon-lb"
  }
}
