{
  "id": "wso2is-km-default",
  "cpus": 0.5,
  "mem": 2048,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "wso2is_km-mesos:5.1.0",
      "network": "BRIDGE",
      "portMappings": [
        {
          "name": "hazelcast",
          "containerPort": 0,
          "hostPort": 0,
          "servicePort": 10146,
          "protocol": "tcp"
        },
        {
          "name": "servlet-http",
          "containerPort": 9763,
          "servicePort": 10142,
          "protocol": "tcp"
        },
        {
          "name": "servlet-https",
          "containerPort": 9443,
          "servicePort": 10143,
          "protocol": "tcp"
        },
        {
          "name": "kdc-server",
          "containerPort": 8000,
          "servicePort": 10144,
          "protocol": "tcp"
        },
        {
          "name": "thrift-entitlement",
          "containerPort": 10500,
          "servicePort": 10145,
          "protocol": "tcp"
        }
      ]
    }
  },
  "env": {
    "KEY_STORE_PASSWORD": "wso2carbon"
  },
  "labels": {
    "HAPROXY_1_GROUP": "marathon-lb",
    "HAPROXY_2_GROUP": "marathon-lb"
  },
  "healthChecks": [
    {
      "portIndex": 1
    }
  ]
}
