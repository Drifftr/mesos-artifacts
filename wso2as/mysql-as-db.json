{
  "id": "mysql-as-db",
  "cpus": 0.2,
  "mem": 128,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "mysql:5.5",
      "network": "BRIDGE",
      "portMappings": [
        {
          "name": "mysql",
          "containerPort": 3306,
          "hostPort": 10021,
          "protocol": "tcp"
        }
      ]
    }
  },
  "env": {
    "MYSQL_ROOT_PASSWORD": "root",
    "MYSQL_DATABASE": "AS_DB",
    "MYSQL_USER": "wso2carbon",
    "MYSQL_PASSWORD": "wso2carbon"
  },
  "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": {
        "value": "mysqladmin -u $MYSQL_USER -p$MYSQL_PASSWORD status"
      },
      "gracePeriodSeconds": 300,
      "intervalSeconds": 20,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ]
}
