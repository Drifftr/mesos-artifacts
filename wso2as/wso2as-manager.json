{
  "id": "wso2as-manager",
  "cpus": 0.2,
  "mem": 700,
  "disk": 0,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "wso2as-manager-mesos:5.3.0",
      "network": "BRIDGE",
      "portMappings": [
        {
          "name": "hazelcast",
          "containerPort": 0,
          "hostPort": 0,
          "servicePort": 10026,
          "protocol": "tcp"
        },
        {
          "containerPort": 9763,
          "servicePort": 10022,
          "protocol": "tcp",
          "name": "servlet-http"
        },
        {
          "containerPort": 9443,
          "servicePort": 10023,
          "protocol": "tcp",
          "name": "servlet-https"
        }
      ]
    }
  },
  "healthChecks": [
    {
      "portIndex": 1
    }
  ],
  "env": {
    "KEY_STORE_PASSWORD": "wso2carbon"
  },
  "labels": {
    "HAPROXY_1_GROUP": "marathon-lb",
    "HAPROXY_2_GROUP": "marathon-lb"
  }
}
