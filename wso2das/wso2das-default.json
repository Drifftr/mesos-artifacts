{
  "id": "wso2das-default",
  "cpus": 0.5,
  "mem": 1024,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "wso2das-mesos:3.0.1",
      "network": "HOST"
    }
  },
  "portDefinitions": [
    {
      "name": "hazelcast",
      "port": 0,
      "protocol": "tcp"
    },
    {
      "name": "servlet-http",
      "port": 9763,
      "protocol": "tcp"
    },
    {
      "name": "servlet-https",
      "port": 9443,
      "protocol": "tcp"
    },
    {
      "name": "thrift",
      "port": 7611,
      "protocol": "tcp"
    },
    {
      "name": "thrift-ssl",
      "port": 7711,
      "protocol": "tcp"
    },
    {
      "name": "spark-ui",
      "port": 0,
      "protocol": "tcp"
    },
    {
      "name": "event-sync",
      "port": 0,
      "protocol": "tcp"
    },
    {
      "name": "management",
      "port": 0,
      "protocol": "tcp"
    },
    {
      "name": "presentation",
      "port": 0,
      "protocol": "tcp"
    },
    {
      "name": "spark-master-webui",
      "port": 0,
      "protocol": "tcp"
    },
    {
      "name": "spark-worker-webui",
      "port": 0,
      "protocol": "tcp"
    },
    {
      "name": "spark-master-port",
      "port": 0,
      "protocol": "tcp"
    },
    {
      "name": "spark-driver-port",
      "port": 0,
      "protocol": "tcp"
    },
    {
      "name": "spark-worker-port",
      "port": 0,
      "protocol": "tcp"
    },
    {
      "name": "spark-executor-port",
      "port": 0,
      "protocol": "tcp"
    }
  ],
  "requirePorts": true,
  "env": {
    "KEY_STORE_PASSWORD": "wso2carbon"
  },
  "labels": {
    "HAPROXY_1_GROUP": "marathon-lb",
    "HAPROXY_2_GROUP": "marathon-lb",
    "HAPROXY_2_BACKEND_SERVER_OPTIONS": "  server {serverName} {host_ipv4}:{port}{cookieOptions} ssl verify none \n",
    "HAPROXY_2_BACKEND_STICKY_OPTIONS": "  cookie JSESSIONID prefix nocache \n",
    "HAPROXY_2_STICKY": "true",
    "HAPROXY_2_SSL_CERT": "/etc/ssl/wso2demo.pem",
    "HAPROXY_2_MODE": "http"
  },
  "healthChecks": [
    {
      "portIndex": 1
    }
  ]
}
