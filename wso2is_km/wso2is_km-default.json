{
    "id": "wso2is_km-default",
    "cpus": 0.5,
    "mem": 800.0,
    "instances": 1,
    "executor": "",
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "wso2is_km-mesos:5.1.0",
            "network": "BRIDGE",
            "portMappings": [
                {
                    "name": "hazelcast",
                    "containerPort": 0,
                    "hostPort": 0,
                    "protocol": "tcp"
                },
                {
                    "containerPort": 9763,
                    "servicePort": 10142,
                    "protocol": "tcp",
                    "name": "servlet-http"
                },
                {
                    "containerPort": 9443,
                    "servicePort": 10143,
                    "protocol": "tcp",
                    "name": "servlet-https"
                },
                {
                    "containerPort": 8000,
                    "servicePort": 10144,
                    "protocol": "tcp",
                    "name": "kdc-server"
                },
                {
                    "containerPort": 10500,
                    "servicePort": 10145,
                    "protocol": "tcp",
                    "name": "thrift-entitlement"
                }
            ]
        }
    },
    "env": {
        "KEY_STORE_PASSWORD": "wso2carbon"
    },
    "labels": {
        "environment": "dev",
        "HAPROXY_GROUP": "marathon-lb"
    },
    "healthChecks": [
        {
            "portIndex": 1
        }
    ]
}
