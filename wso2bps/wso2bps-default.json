{
    "id": "wso2bps-default",
    "cpus": 0.5,
    "mem": 800.0,
    "instances": 1,
    "executor": "",
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "wso2bps:3.5.1",
            "network": "BRIDGE",
            "portMappings": [
                {
                    "containerPort": 9763,
                    "servicePort": 10033,
                    "protocol": "tcp",
                    "name": "servlet-http",
                    "labels": {
                        "VIP_0": "9763"
                    }
                },
                {
                    "containerPort": 9443,
                    "servicePort": 10034,
                    "protocol": "tcp",
                    "name": "servlet-https",
                    "labels": {
                        "VIP_1": "9443"
                    }
                }
            ]
        },
        "volumes": [
            {
                "containerPath": "/mnt/mesos-artifacts/bps",
                "hostPath": "/mnt/mesos-artifacts/bps",
                "mode": "RW"
            }
        ]
    },
    "env": {

    },
    "constraints": [

    ],
    "labels": {
        "environment": "dev",
        "HAPROXY_GROUP": "marathon-lb"
    },
    "fetch": [

    ],
    "dependencies": [],
    "healthChecks": [

    ],
    "backoffSeconds": 1,
    "backoffFactor": 1.15,
    "maxLaunchDelaySeconds": 3600,
    "upgradeStrategy": {
        "minimumHealthCapacity": 0.5,
        "maximumOverCapacity": 0.2
    }
}
