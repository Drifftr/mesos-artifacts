{
    "id": "wso2bps-worker",
    "cpus": 0.5,
    "mem": 1024,
    "disk": 0,
    "instances": 1,
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "wso2bps-worker-mesos:3.5.1",
            "network": "BRIDGE",
            "portMappings": [
                {
                    "name": "hazelcast",
                    "containerPort": 0,
                    "hostPort": 0,
                    "servicePort": 10037,
                    "protocol": "tcp"
                },
                {
                    "containerPort": 9763,
                    "servicePort": 10034,
                    "protocol": "tcp",
                    "name": "servlet-http"
                },
                {
                    "containerPort": 9443,
                    "servicePort": 10035,
                    "protocol": "tcp",
                    "name": "servlet-https"
                }
            ]
        }
    },
    "healthChecks": [
        {
            "portIndex": 1
        }
    ],
    "env": {
        "KEY_STORE_PASSWORD": "wso2carbon"
    },
    "labels": {
        "HAPROXY_1_GROUP": "marathon-lb",
        "HAPROXY_2_GROUP": "marathon-lb"
    }
}
