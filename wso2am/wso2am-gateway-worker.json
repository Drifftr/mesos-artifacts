{
    "id": "wso2am-gateway-worker",
    "cpus": 0.5,
    "mem": 800.0,
    "instances": 1,
    "executor": "",
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "wso2am-gateway-worker-mesos:1.10.0",
            "network": "BRIDGE",
            "portMappings": [
                {
                    "name": "hazelcast",
                    "containerPort": 0,
                    "hostPort": 0,
                    "protocol": "tcp"
                },
                {
                    "containerPort": 8280,
                    "servicePort": 10017,
                    "protocol": "tcp",
                    "name": "pass-through-http"
                },
                {
                    "containerPort": 8243,
                    "servicePort": 10018,
                    "protocol": "tcp",
                    "name": "pass-through-https"
                },
                {
                    "containerPort": 9763,
                    "servicePort": 10019,
                    "protocol": "tcp",
                    "name": "servlet-http"
                },
                {
                    "containerPort": 9443,
                    "servicePort": 10020,
                    "protocol": "tcp",
                    "name": "servlet-https"
                }
            ]
        }
    },
    "env": {
        "KEY_STORE_PASSWORD": "wso2carbon"
    },
    "labels": {
        "environment": "dev",
        "HAPROXY_GROUP": "marathon-lb"
    },
    "healthChecks": [
        {
            "portIndex": 1
        }
    ]
}
