{
    "id": "wso2am-gateway-manager",
    "cpus": 0.5,
    "mem": 800.0,
    "instances": 1,
    "executor": "",
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "wso2am-gateway-manager-mesos:1.10.0",
            "network": "BRIDGE",
            "portMappings": [
                {
                    "name": "hazelcast",
                    "containerPort": 0,
                    "hostPort": 0,
                    "protocol": "tcp"
                },
                {
                    "containerPort": 8280,
                    "servicePort": 10013,
                    "protocol": "tcp",
                    "name": "pass-through-http",
                    "labels": {
                        "VIP_0": "8280"
                    }
                },
                {
                    "containerPort": 8243,
                    "servicePort": 10014,
                    "protocol": "tcp",
                    "name": "pass-through-https",
                    "labels": {
                        "VIP_1": "8243"
                    }
                },
                {
                    "containerPort": 9763,
                    "servicePort": 10015,
                    "protocol": "tcp",
                    "name": "servlet-http",
                    "labels": {
                        "VIP_0": "9763"
                    }
                },
                {
                    "containerPort": 9443,
                    "servicePort": 10016,
                    "protocol": "tcp",
                    "name": "servlet-https",
                    "labels": {
                        "VIP_1": "9443"
                    }
                }
            ]
        }
    },
    "env": {
        "KEY_STORE_PASSWORD": "wso2carbon"
    },
    "labels": {
        "environment": "dev",
        "HAPROXY_GROUP": "marathon-lb"
    },
    "healthChecks": [
        {
            "portIndex": 1
        }
    ]
}
