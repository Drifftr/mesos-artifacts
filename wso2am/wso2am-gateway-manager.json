{
    "id": "wso2am-gateway-manager",
    "cpus": 1.0,
    "mem": 1000.0,
    "instances": 1,
    "executor": "",
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "wso2am-gateway-manager-mesos:1.10.0",
            "network": "BRIDGE",
            "portMappings": [
                {
                    "name": "hazelcast",
                    "containerPort": 0,
                    "hostPort": 0,
                    "servicePort": 10222,
                    "protocol": "tcp"
                },
                {
                    "containerPort": 8280,
                    "servicePort": 10210,
                    "protocol": "tcp",
                    "name": "pass-through-http"
                },
                {
                    "containerPort": 8243,
                    "servicePort": 10211,
                    "protocol": "tcp",
                    "name": "pass-through-https"
                },
                {
                    "containerPort": 9763,
                    "servicePort": 10212,
                    "protocol": "tcp",
                    "name": "servlet-http"
                },
                {
                    "containerPort": 9443,
                    "servicePort": 10213,
                    "protocol": "tcp",
                    "name": "servlet-https"
                }
            ]
        }
    },
    "env": {
        "KEY_STORE_PASSWORD": "wso2carbon"
    },
    "labels": {
        "HAPROXY_1_GROUP": "marathon-lb",
        "HAPROXY_2_GROUP": "marathon-lb",
        "HAPROXY_3_GROUP": "marathon-lb",
        "HAPROXY_4_GROUP": "marathon-lb"
    },
    "healthChecks": [
        {
            "portIndex": 3
        }
    ]
}
