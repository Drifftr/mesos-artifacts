{
    "id": "wso2cep-worker",
    "cpus": 0.5,
    "mem": 1024,
    "disk": 0,
    "instances": 1,
    "container": {
        "docker": {
            "image": "wso2cep-worker-mesos:4.0.0",
            "network": "BRIDGE",
            "portMappings": [
                {
                    "name": "hazelcast",
                    "containerPort": 0,
                    "hostPort": 0,
                    "protocol": "tcp"
                },
                {
                    "containerPort": 9763,
                    "servicePort": 10054,
                    "protocol": "tcp",
                    "name": "servlet-http"
                },
                {
                    "containerPort": 9443,
                    "servicePort": 10055,
                    "protocol": "tcp",
                    "name": "servlet-https"
                },
                {
                    "containerPort": 7611,
                    "servicePort": 10056,
                    "protocol": "tcp",
                    "name": "thrift"
                },
                {
                    "containerPort": 7711,
                    "servicePort": 10057,
                    "protocol": "tcp",
                    "name": "thrift-ssl"
                }
            ]
        },
        "type": "DOCKER"
    },
    "env": {
        "KEY_STORE_PASSWORD": "wso2carbon"
    },
    "healthChecks": [
        {
            "portIndex": 1
        }
    ],
    "labels": {
        "HAPROXY_GROUP": "marathon-lb"
    }
}