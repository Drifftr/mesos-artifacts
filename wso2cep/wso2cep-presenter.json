{
    "id": "wso2cep-presenter",
    "cpus": 0.5,
    "mem": 1024,
    "disk": 0,
    "instances": 1,
    "container": {
        "docker": {
            "image": "wso2cep-presenter-mesos:4.0.0",
            "network": "BRIDGE",
            "portMappings": [
                {
                    "name": "hazelcast",
                    "containerPort": 0,
                    "hostPort": 0,
                    "protocol": "tcp"
                },
                {
                    "containerPort": 9763,
                    "servicePort": 10052,
                    "protocol": "tcp",
                    "name": "servlet-http",
                    "labels": {
                        "VIP_0": "9763"
                    }
                },
                {
                    "containerPort": 9443,
                    "servicePort": 10053,
                    "protocol": "tcp",
                    "name": "servlet-https",
                    "labels": {
                        "VIP_1": "9443"
                    }
                }
            ]
        },
        "type": "DOCKER"
    },
    "env": {
        "KEY_STORE_PASSWORD": "wso2carbon"
    },
    "healthChecks": [
        {
            "portIndex": 1
        }
    ],
    "labels": {
        "HAPROXY_GROUP": "marathon-lb"
    }
}
