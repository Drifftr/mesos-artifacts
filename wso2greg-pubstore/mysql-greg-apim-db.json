{
  "id": "mysql-greg-apim-db",
  "cpus": 0.2,
  "mem": 128,
  "disk": 0,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "mysql:5.5",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 3306,
          "hostPort": 10132,
          "protocol": "tcp",
          "name": "mysql",
          "labels": {
            "VIP_0": "3306"
          }
        }
      ]
    }
  },
  "env": {
    "MYSQL_ROOT_PASSWORD": "root",
    "MYSQL_DATABASE": "GREG_APIM_DB",
    "MYSQL_USER": "wso2carbon",
    "MYSQL_PASSWORD": "wso2carbon"
  },
  "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": { "value": "mysqladmin -u $MYSQL_USER -p$MYSQL_PASSWORD status" },
      "gracePeriodSeconds": 300,
      "intervalSeconds": 20,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ]
}
